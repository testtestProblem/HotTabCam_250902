<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CameraManualControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:System.Numerics"
    x:Class="CameraManualControls.MainPage"
    mc:Ignorable="d">


    <Page.Resources>
        <SolidColorBrush x:Key="TranslucentBlackBrush" Color="Black" Opacity="0.3"/>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource TranslucentBlackBrush}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <local:RoundingConverter x:Key="RoundingConverter"/>
    </Page.Resources>


    <Grid Background="Black">

        <!--Camera preview-->
        <CaptureElement x:Name="PreviewControl" Stretch="Uniform" ManipulationMode="Scale" 
                        ManipulationDelta="PreviewControl_ManipulationDelta" Tapped="PreviewControl_Tapped" FocusVisualSecondaryBrush="#99C52020"/>

        <Canvas x:Name="FocusCanvas">
            <Rectangle x:Name="FocusRectangle" Stroke="White" StrokeThickness="2" Visibility="Collapsed"/>
            <SplitView x:Name="Splitter" Grid.Row="1" DisplayMode="Inline" Height="990" BackgroundSizing="InnerBorderEdge" FontWeight="Normal" Canvas.Left="99" Width="157" PaneBackground="Black" Loading="Splitter_Loading">
                <SplitView.Pane>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="17*"/>
                            <RowDefinition Height="82*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="PhotoText" Text="Photo Format:" Margin="10,59,220,742" Foreground="Gray" Grid.Row="1"/>
                        <ComboBox x:Name="FormatComboBox" Width="135" Background="Gray" Height="51" Margin="10,78,0,0" SelectionChanged="FormatComboBox_SelectionChanged" PlaceholderText="Photo Setting" Grid.Row="1"/>
                        <TextBlock Text="Setting:" Margin="10,10,72,110" Foreground="Gray" FontSize="36"/>
                        <ComboBox x:Name="FrontVideoFormatComboBox" Width="135" Background="Gray" Height="51" PlaceholderText="Video Setting" Margin="10,123,0,0" SelectionChanged="VideoFormatComboBox_SelectionChanged" Grid.RowSpan="2"/>
                        <TextBlock Text="Video Format:" Margin="10,100,219,51" Foreground="Gray"/>
                        <ComboBox x:Name="BackVideoFormatComboBox" Width="135" Background="Gray" Height="51" PlaceholderText="Video Setting" SelectionChanged="VideoFormatComboBox_SelectionChanged" Margin="10,123,0,0" Grid.RowSpan="2"/>
                    </Grid>
                </SplitView.Pane>
            </SplitView>
        </Canvas>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0">
            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                    <Setter Property="MinWidth" Value="80"/>
                    <Setter Property="MinHeight" Value="80"/>
                </Style>
            </StackPanel.Resources>

            <Button x:Name="PhotoButton" Click="PhotoButton_Click" IsEnabled="False">
                <Viewbox MaxHeight="40" MaxWidth="40">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEC80;"/>
                </Viewbox>
            </Button>

            <Button x:Name="VideoButton" Click="VideoButton_Click" IsEnabled="False">
                <Grid>
                    <Ellipse x:Name="StartRecordingIcon" Fill="Red" Width="20" Height="20"/>
                    <Rectangle x:Name="StopRecordingIcon" Fill="White" Width="20" Height="20" Visibility="Collapsed"/>
                </Grid>
            </Button>
            <Button x:Name="FlashBtn" Click="FlashBtn_Click" Width="80" Height="78">
                <Grid>
                    <Viewbox MaxHeight="40" MaxWidth="40">
                        <FontIcon x:Name="FlashOffIcon" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE754;" />
                    </Viewbox>
                    <Viewbox MaxHeight="40" MaxWidth="40">
                        <FontIcon x:Name="FlashOnIcon" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE781;" Visibility="Collapsed"/>
                    </Viewbox>
                </Grid>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Height="572">
            <StackPanel.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                    <Setter Property="MinWidth" Value="80"/>
                    <Setter Property="MinHeight" Value="80"/>
                </Style>
            </StackPanel.Resources>

            <Button x:Name="SwitchBtn" Click="Button_Click" Width="80" Height="78">
                <Viewbox MaxHeight="40" MaxWidth="40">
                    <SymbolIcon Symbol="RotateCamera" RenderTransformOrigin="1,1"/>
                </Viewbox>
            </Button>

            <Button x:Name="SettingBtn" Width="80" Height="78" Click="SettingBtn_Click">
                <Viewbox MaxHeight="40" MaxWidth="40">
                    <SymbolIcon Symbol="Setting"/>
                </Viewbox>
            </Button>
            <Button x:Name="PicFolderBtn" Width="80" Height="78" Click="PicFolderBtn_Click">
                <Viewbox MaxHeight="40" MaxWidth="40">
                    <SymbolIcon Symbol="Pictures"/>
                </Viewbox>
            </Button>
            <TextBox x:Name="timerText" Text="" TextWrapping="Wrap" Height="73" Width="145" FontSize="48" Margin="0,20,0,0" IsEnabled="False" Foreground="#FFEA0909" RequestedTheme="Default" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Capture + Record buttons -->

        <!--Manual controls-->
        <Grid Visibility="Collapsed" x:Name="CameraControlsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Stack panel containing the buttons for each control scenario-->
            <StackPanel x:Name="ScenarioControlStackPanel" Grid.Row="0" HorizontalAlignment="Left" MinWidth="88">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                        <Setter Property="Margin" Value="10,7"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    </Style>
                </StackPanel.Resources>
                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition/>
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>

                <Button x:Name="FlashButton" Content="Flash" Click="ManualControlButton_Click"/>
                <Button x:Name="ZoomButton" Content="Zoom" Click="ManualControlButton_Click"/>
                <Button x:Name="FocusButton" Content="Focus" Click="ManualControlButton_Click"/>
                <Button x:Name="WbButton" Content="WB" Click="ManualControlButton_Click"/>
                <Button x:Name="IsoButton" Content="ISO" Click="ManualControlButton_Click"/>
                <Button x:Name="ShutterButton" Content="Shutter" Click="ManualControlButton_Click"/>
                <Button x:Name="EvButton" Content="EV" Click="ManualControlButton_Click"/>
            </StackPanel>

            <!--Grid that hosts all of the manual controls for the selected camera control-->
            <Grid x:Name="ManualControlsGrid" Grid.Row="1" HorizontalAlignment="Left"  Background="{StaticResource TranslucentBlackBrush}" Margin="10" Visibility="Collapsed">

                <StackPanel x:Name="FlashStackPanel" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=FlashButton}">
                    <RadioButton x:Name="FlashOnRadioButton" Content="On" Checked="FlashOnRadioButton_Checked"/>
                    <RadioButton x:Name="FlashAutoRadioButton" Content="Auto" Checked="FlashAutoRadioButton_Checked"/>
                    <RadioButton x:Name="FlashOffRadioButton" Content="Off" Checked="FlashOffRadioButton_Checked"/>
                    <CheckBox x:Name="RedEyeFlashCheckBox" Content="Red Eye" Visibility="Collapsed" Checked="RedEyeFlashCheckBox_CheckedChanged" Unchecked="RedEyeFlashCheckBox_CheckedChanged"/>
                    <CheckBox x:Name="TorchCheckBox" Content="Video Light" Visibility="Collapsed" Checked="TorchCheckBox_CheckedChanged" Unchecked="TorchCheckBox_CheckedChanged"/>
                </StackPanel>

                <Grid x:Name="ZoomGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=ZoomButton}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="ZoomSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" ValueChanged="ZoomSlider_ValueChanged"/>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="{Binding Value, Converter={StaticResource RoundingConverter}, ElementName=ZoomSlider}"/>
                </Grid>

                <Grid x:Name="FocusGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=FocusButton}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="FocusSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsChecked, ElementName=ManualFocusRadioButton}" ValueChanged="FocusSlider_ValueChanged"/>
                    <TextBlock Text="{Binding Value, ElementName=FocusSlider, FallbackValue=0}" Grid.Row="1" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="2">
                        <RadioButton Content="Manual" x:Name="ManualFocusRadioButton" Checked="ManualFocusRadioButton_Checked" IsChecked="True"/>
                        <RadioButton Content="CAF" x:Name="CafFocusRadioButton" Checked="CafFocusRadioButton_Checked"/>
                        <RadioButton Content="Tap" x:Name="TapFocusRadioButton" Checked="TapFocusRadioButton_Checked"/>
                        <CheckBox Content="Assist Light" x:Name="FocusLightCheckBox" IsEnabled="{Binding IsChecked, ElementName=TapFocusRadioButton}"
                                  Checked="FocusLightCheckBox_CheckedChanged" Unchecked="FocusLightCheckBox_CheckedChanged"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="WbStackPanel" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=WbButton}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="WbSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" ValueChanged="WbSlider_ValueChanged"/>
                    <TextBlock x:Name="WbTextBox" Grid.Row="1" HorizontalAlignment="Center" Text="{Binding Value, ElementName=WbSlider}"/>
                    <ComboBox x:Name="WbComboBox" Grid.Row="2" SelectionChanged="WbComboBox_SelectionChanged"/>
                </Grid>

                <Grid x:Name="IsoGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=IsoButton}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="IsoSlider" Grid.Row="0" IsEnabled="{Binding IsChecked, Converter={StaticResource InvertBoolConverter}, ElementName=IsoAutoCheckBox}"
                            Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" ValueChanged="IsoSlider_ValueChanged"/>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="{Binding Value, ElementName=IsoSlider}"/>
                    <CheckBox x:Name="IsoAutoCheckBox" Grid.Row="2" Content="Auto" Checked="IsoAutoCheckBox_CheckedChanged" Unchecked="IsoAutoCheckBox_CheckedChanged"/>
                </Grid>

                <Grid x:Name="ShutterGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=ShutterButton}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="ShutterSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch"  ValueChanged="ShutterSlider_ValueChanged"
                            IsEnabled="{Binding IsChecked, Converter={StaticResource InvertBoolConverter}, ElementName=ShutterAutoCheckBox}"/>
                    <TextBlock x:Name="ShutterTextBlock" Grid.Row="1" HorizontalAlignment="Center" Text="0"/>
                    <CheckBox x:Name="ShutterAutoCheckBox" Grid.Row="2" Content="Auto" Checked="ShutterCheckBox_CheckedChanged" Unchecked="ShutterCheckBox_CheckedChanged"/>
                </Grid>

                <Grid x:Name="EvGrid" HorizontalAlignment="Center" Margin="10" Visibility="{Binding Visibility, ElementName=EvButton}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="EvSlider" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" ValueChanged="EvSlider_ValueChanged"/>
                    <TextBlock x:Name="EvTextBlock" Grid.Row="1" HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>

    </Grid>

</Page>
